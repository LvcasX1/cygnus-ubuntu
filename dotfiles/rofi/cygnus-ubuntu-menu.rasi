/* Cygnus-Ubuntu Menu */
@import "~/.config/rofi/config.rasi"
@import "~/.config/rofi/cygnus-ubuntu-shared.rasi"

configuration {
    show-icons: false;
}

window {
    width: 340px;
    location: center;
}

mainbox {
    children: ["listview"];
    padding: 8px;
}

listview {
    columns: 1;
    lines: 5;
    spacing: 4px;
    padding: 4px;
}

element {
    padding: 12px 16px;
}

element-text {
    horizontal-align: 0.0;
    vertical-align: 0.5;
}
